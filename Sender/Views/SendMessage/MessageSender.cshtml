@model MessageTypesVM

@{
    ViewData["Title"] = "What's Your Message ?";
}
&nbsp;
<h4>@ViewData["Title"]</h4>
&nbsp;
<div class="text-center">
    <form asp-controller="SendMessage" asp-action="MessageSender" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="card-body">
                <p style=" font-size:24px; text-align:center;">
                    <b>Send A Message</b>
                </p>
                <div class="form-group row mb-2">
                    <label class="col-form-label col-sm-3">Message:</label>
                    <div class="col-sm-9">
                        <input type="text" asp-for="myMessage" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group row mb-2">
                <div class="col-sm-9">
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </div>
            </div>
        </div>
    </form>
</div>

